{% extends 'SonataAdminBundle:CRUD:base_show_field.html.twig' %}
{% block field %}
    {% if value %}
        {% for image in value %}
            <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2">
                <div class="thumbnail">
                    <img class="img-responsive" src="{{ object.getWebPath(image, true)|thumb(300, 500) }}"
                         alt="thumb_gallery">
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="thumbnail col-xs-12">
            <img class="img-responsive" src="{{ asset('public/assets/img/smile.png') }}" alt="thumb">
        </div>
    {% endif %}
{% endblock %}